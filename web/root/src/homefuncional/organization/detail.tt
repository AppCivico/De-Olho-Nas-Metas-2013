<script>
	
$(document).ready(function () {
  $('#follow_or_not').on('click', function () {
	var id = $(this).data("id"),
		url,
		textview;
	var button = $(this);
	if ($(this).hasClass('follow')){
		url = "/home/organization/user_follow_counsil";
		$(this).removeClass('follow');
		textview = "Parar de Seguir";	
	}else{
		url = "/home/organization/user_stop_counsil";
		$(this).addClass('follow');
		textview = "Siga o Conselho";	
	}
	$(this).attr('disabled',true);
	$.post( url, { user_id: $(this).data("id"), counsil_id: $('#orgid').val() },function( data ) {

		$(button).find("span").html(textview);
		$('.counter').html(data.counsil_count);
		$(button).attr('disabled',false);
    },"json")
	
  })
});
</script>
